<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mindwiki.dao.NodeDao">

	<select id="existByMindID" parameterType="com.mindwiki.model.NodeDto" resultType="int">
		SELECT EXISTS (SELECT * FROM mind WHERE MindID=#{MindID})
	</select>
	
	<insert id="initNode" parameterType="object" >
		INSERT INTO node
					(MindID, nodeObject)
			VALUES	(#{MindID}, #{nodeObject})
	</insert>
	
	<insert id="setNode" parameterType="object" >
		INSERT INTO node
					(nodeObject)
			VALUES	(#{nodeObject})
		WHERE MindID=#{MindID};
	</insert>
	
	<select id="getNode" parameterType="com.mindwiki.model.NodeDto" resultType="String">
		SELECT nodeObject 
		FROM node 
		WHERE MindID=#{MindID}
	</select>
		
</mapper>