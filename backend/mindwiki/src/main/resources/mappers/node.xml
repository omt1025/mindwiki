<mapper namespace="com.mindwiki.dao.NodeDao">


	<select id="existMindID" parameterType="com.mindwiki.model.NodeDto">
		SELECT EXISTS (SELECT * FROM mind WHERE MindID=#{MindID})
	</select>
	
	<insert id="setNode" parameterType="com.mindwiki.model.NodeDto">
		 INSERT INTO node (MindID, data)
                    VALUES  (#{MindID}, #{data}) 
	</insert>
	
