<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mindwiki.dao.NodeDao">


	<select id="existByMindID" parameterType="com.mindwiki.model.NodeDto">
		SELECT EXISTS (SELECT * FROM mind WHERE MindID=#{MindID})
	</select>
	
	<insert id="setNode" parameterType="com.mindwiki.model.NodeDto">
		 INSERT INTO node (MindID, data)
                    VALUES  (#{MindID}, #{data}) 
	</insert>
	
	<select id="getNode" parameterType="com.mindwiki.model.NodeDto" resultType="string">
		SELECT data FROM node WHERE MindID=#{MindID}
	</select>
		
</mapper>